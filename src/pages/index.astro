---
import Layout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.astro";
import { products } from "../lib/products";
---

<Layout>
  <div class="flex-1 flex flex-col">
    <!-- Main Content -->
    <div class="flex-1 w-full pt-20 pb-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <!-- Hero Section -->
        <div class="text-center max-w-2xl mx-auto mb-20">
          <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6 tracking-tight">
            Simple pricing.
          </h1>

          <p class="text-lg text-neutral-400 mb-8 leading-relaxed">
            Two plans. No hidden fees. Cancel anytime.
          </p>
        </div>

        <!-- Products Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          {products.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>
