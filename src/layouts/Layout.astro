---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Dodo Payments Astro Boilerplate" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Minimal boilerplate for Dodo Payments with Astro" />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white antialiased min-h-screen flex flex-col">
    <Header />
    <main class="grow pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
